type User {
    id: ID!
    name: String!
    nickname: String!
    email: String!
    isConfirmed: Boolean
    roles: [Role!]!
    tokens: [Token!]!
    createdAt: Int!
    updatedAt: Int!
    deactivatedAt: Int
}

type Role {
    id: ID!
    name: String!
}

type Token {
    id: ID!
    user: User
    refresh: String!
    userAgent: String!
    ip: String!
    createdAt: Int!
    lastLoginAt: Int!
}

type Query {
    getAllUsers: [User!]!
    getUserById(id: ID): User

    getAllRoles: [Role!]!
    getRoleById(id: ID): Role

    getTokenById(id: ID): Token
}